#!/usr/bin/sh

SCRIPT=$(readlink -f $0)
DEV_ENV_ROOT=`dirname $SCRIPT`

echo "export DEV_ENV_ROOT=$DEV_ENV_ROOT" >> $HOME/.bashrc
echo 'source $DEV_ENV_ROOT/.bashrc' >> $HOME/.bashrc

# TODO: Try to find a way to not require these symlinks and dirs.  
#       The smaller the footprint in the home directory the better.

# TODO: Remap the shebangs in pyenv bin dirs to match the install dir

# vim content
mkdir -p $HOME/.config/nvim
ln -f -s $DEV_ENV_ROOT/.vimrc $HOME/.config/nvim/init.vim
ln -f -s $DEV_ENV_ROOT/.vim  $HOME/.vim
mkdir -p $HOME/.local/share/nvim/site/autoload
ln -f -s $DEV_ENV_ROOT/.local/share/nvim/site/autoload/plug.vim $HOME/.local/share/nvim/site/autoload/plug.vim

# git config
ln -f -s $DEV_ENV_ROOT/.gitconfig  $HOME/.gitconfig
